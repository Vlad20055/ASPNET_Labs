@{
    ViewBag.Title = "Index";
}

<div class="row mb-4">
    <div class="col">
        <h2 class="fw-bold">Лабораторная работа 1</h2>
    </div>
</div>

<!-- Упорядоченный список с заглавными буквами -->
<div class="row mb-4">
    <div class="col">
        <h4><b>Список</b></h4>
        <ol type="A" class="fs-5">
            <li>Первый элемент списка</li>
            <li>Второй элемент списка</li>
            <li>Третий элемент списка</li>
            <li>Четвертый элемент списка</li>
        </ol>
    </div>
</div>

<div class="row mb-4">
    <div class="col">
        <h4 class="fw-bold">ФОРМА</h4>
    </div>
</div>

<form method="post">

    <div class="row mb-3">
        <div class="col-sm-2"></div> <!-- Пустая колонка для выравнивания -->
        <div class="col-sm-10">
            <div class="form-check">
                <input class="form-check-input" name="checkbox1" type="checkbox" value="" id="checkbox1">
                <label class="form-check-label" for="checkbox1">
                    Чек-бокс 1
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" name="checkbox2" type="checkbox" value="" id="checkbox2">
                <label class="form-check-label" for="checkbox2">
                    Чек-бокс 2
                </label>
            </div>
        </div>
    </div>


    <fieldset class="row mb-3">
        <div class="col-sm-2"></div> <!-- Пустая колонка для выравнивания -->
        <div class="col-sm-10">
            <div class="d-flex gap-4">
                <!-- Flex с отступами между элементами -->
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                    <label class="form-check-label" for="gridRadios1">
                        Радио-1
                    </label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                    <label class="form-check-label" for="gridRadios2">
                        Радио-2
                    </label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3">
                    <label class="form-check-label" for="gridRadios3">
                        Радио-3
                    </label>
                </div>
            </div>
        </div>
    </fieldset>



    <div class="row mb-3">
        <label for="inputLogin" class="col-sm-2 col-form-label">Логин:</label>
        <div class="col-sm-10">
            <input class="form-control" name="inputLogin" id="inputLogin">
        </div>
    </div> <!-- Login -->
    <div class="row mb-3">
        <label for="inputPassword" class="col-sm-2 col-form-label">Пароль:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="inputPassword" id="inputPassword">
        </div>
    </div> <!-- Password -->

    <button type="submit" class="btn btn-primary" name="submitButton">Отправить</button>

</form>



